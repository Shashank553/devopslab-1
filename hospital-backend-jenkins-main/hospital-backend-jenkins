pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/suneethabulla/hospital-backend-jenkins.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying Spring Boot app...'
                sh 'java -jar target/hospital-backend-0.0.1-SNAPSHOT.jar &'
            }
        }
    }
}
